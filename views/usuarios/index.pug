extends ../layout

block content
    .container
        a.btn.btn-primary(href="/usuarios/create") Nuevo Usuario
        table.table
            thead
                th(scope="col") Nombre
                th(scope="col") E-mail
                th(scope="col") Verificado
                th(scope="col")
                th(scope="col")
            tbody
                each usuario in usuarios
                    tr
                    td=usuario.nombre
                    td=usuario.email
                    td=usuario.verificado
                    td
                        a.btn.btn-primary.btn-sm(href=`/usuarios/${usuario._id}/update`) Editar
                    td 
                        form(action=`/usuarios/${usuario._id}/delete` method="post")
                            input.btn.btn-danger.btn-sm(type="submit" value="Eliminar")