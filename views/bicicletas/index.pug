extends ../layout

block content
    .container
        a.btn.btn-primary(href="/bicicletas/create") Nueva Bicicleta
        table.table
            thead
                th(scope="col") #
                th(scope="col") Color
                th(scope="col") Modelo
                th(scope="col") Ubicaci√≥n
                th(scope="col")
                th(scope="col")
            tbody
                each bici in bicis
                    tr
                    td=bici.id
                    td=bici.color
                    td=bici.modelo
                    td=bici.ubicacion
                    td
                        a.btn.btn-primary.btn-sm(href=`/bicicletas/${bici.id}/update`) Editar
                    td 
                        form(action=`/bicicletas/${bici.id}/delete` method="post")
                            input.btn.btn-danger.btn-sm(type="submit" value="Eliminar")